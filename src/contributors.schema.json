{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://starbeam.app/contributors.schema.json",
  "$comment": "This schema is used to validate the contributors.json file.",
  "title": "Contributor",
  "description": "A contributor to Starbeam",
  "type": "object",
  "properties": {
    "contributors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "github"],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the contributor"
          },
          "avatar": {
            "type": "string",
            "description": "The URL of the contributor's avatar"
          },
          "bio": {
            "type": "string",
            "description": "The contributor's bio"
          },
          "github": {
            "type": "string",
            "description": "The contributor's GitHub username"
          },
          "social": {
            "$ref": "#/definitions/social"
          },
          "team": {
            "$ref": "#/definitions/team"
          }
        }
      }
    }
  },

  "definitions": {
    "team": {
      "type": "string",
      "description": "The contributor's team (if any)",
      "enum": ["Library"]
    },
    "social": {
      "type": "object",
      "properties": {
        "twitter": {
          "type": "string",
          "description": "The contributor's Twitter username"
        }
      },
      "additionalProperties": {
        "oneOf": [
          {
            "type": "string",
            "format": "uri"
          },
          {
            "type": "object",
            "required": ["profile", "username"],
            "properties": {
              "profile": {
                "type": "string",
                "format": "uri-template"
              },
              "username": {
                "type": "string"
              }
            }
          }
        ]
      }
    },
    "socials": {
      "type": "object",
      "additionalProperties": true,

      "properties": {
        "twitter": {
          "type": "string"
        }
      }
    }
  }
}
