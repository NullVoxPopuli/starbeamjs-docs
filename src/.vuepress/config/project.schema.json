{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "$defs": {
    "navItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["link", "text"],
      "properties": {
        "link": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        }
      }
    },
    "navGroup": {
      "type": "object",
      "additionalProperties": false,
      "required": ["text", "children"],
      "properties": {
        "text": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "prefix": {
          "type": "string"
        },
        "activeWhen": {
          "type": "string"
        },
        "link": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/navChild"
          }
        }
      }
    },
    "navChild": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/$defs/navItem"
        },
        {
          "$ref": "#/$defs/navGroup"
        }
      ]
    }
  },
  "required": ["nav", "sidebar"],
  "properties": {
    "nav": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/navChild"
      }
    },
    "sidebar": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/properties/sidebar"
            }
          }
        ]
      }
    },
    "markdown": {
      "oneOf": [
        {
          "enum": ["all"]
        },
        {
          "type": "object",
          "required": ["features"],
          "properties": {
            "features": {
              "type": "array",
              "items": {
                "enum": [
                  "gfm",
                  "container",
                  "vpre",
                  "tabs",
                  "codetabs",
                  "align",
                  "sup",
                  "sub",
                  "footnote",
                  "imageMark",
                  "lazyLoad",
                  "mark",
                  "chart",
                  "echarts",
                  "flowchart",
                  "mermaid"
                ]
              }
            },
            "linkCheck": {
              "enum": ["always", "dev", "build", "never"]
            },
            "attrs": {
              "oneOf": [
                {
                  "type": "boolean"
                },
                {
                  "type": "object",
                  "properties": {
                    "left": {
                      "type": "string"
                    },
                    "right": {
                      "type": "string"
                    },
                    "allowed": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              ]
            },
            "taskList": {
              "oneOf": [
                {
                  "type": "boolean"
                },
                {
                  "type": "array",
                  "description": "disabled disables the checkbox, enabled enables the checkbox, label wraps the text in a <label>",
                  "items": {
                    "enum": ["disabled", "label"]
                  }
                }
              ]
            }
          }
        }
      ]
    }
  }
}
