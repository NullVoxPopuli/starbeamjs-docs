{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "$defs": {
    "navItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["link", "text"],
      "properties": {
        "link": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        }
      }
    },
    "navGroup": {
      "type": "object",
      "additionalProperties": false,
      "required": ["text", "children"],
      "properties": {
        "text": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "prefix": {
          "type": "string"
        },
        "activeWhen": {
          "type": "string"
        },
        "link": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/navChild"
          }
        }
      }
    },
    "navChild": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/$defs/navItem"
        },
        {
          "$ref": "#/$defs/navGroup"
        }
      ]
    }
  },
  "properties": {
    "nav": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/navChild"
      }
    },
    "sidebar": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/properties/sidebar"
            }
          }
        ]
      }
    }
  }
}
